<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit Comment</h1>
        <div style="width:40%; margin: 25px auto;">
        <form method='post' action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
            <div class="form-group">
                <input value="<%= comment.text %>" class="form-control" type="text" name="comment[text]" placeholder="Text">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Add Comment">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>