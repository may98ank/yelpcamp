<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create New CampGround Here!!</h1>
        <div style="width:40%; margin: 25px auto;">
        <form method='post' action="/campgrounds">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Site Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price Per Night" step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image Url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Site Description">
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" placeholder="Add Camp">
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>